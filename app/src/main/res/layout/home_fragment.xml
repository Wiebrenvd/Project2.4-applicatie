<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/TableRowHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pop_recept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="2dp"
                android:paddingBottom="2dp"
                android:text="Populaire Recepten"
                android:textAlignment="textStart"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRowRecepten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pop_receptText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:onClick="onClick1"
                    android:clickable="true"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/pop_receptText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/pop_receptText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/pop_receptText4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textAlignment="textStart" />

                <TextView
                    android:id="@+id/pop_receptText5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textAlignment="textStart" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/TableRowLineSeperator"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/viewLineSeparator2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#817070"></View>
        </TableRow>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>