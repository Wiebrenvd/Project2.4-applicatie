<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/TableRow_receptNaam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TextView
            android:id="@+id/receptNaam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="@string/receptnaam"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:id="@+id/TableRow_receptImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:scaleType="centerInside"
            android:src="@drawable/mockreceptimage" />
    </TableRow>

    <TableRow
        android:id="@+id/TableRow_ingriententitel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingredi_nten_lijst"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/TableRow_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <TextView
            android:id="@+id/ingriedientslist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </TableRow>

    <TableRow
        android:id="@+id/TableRow_recepttexttitel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Bereidwijze"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/TableRow_receptText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.25">

        <TextView
            android:id="@+id/receptText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/receptText" />

    </TableRow>
    <TableRow
        android:id="@+id/TableRow_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/startbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="startChronometer"
                    android:text="Start" />

                <Button
                    android:id="@+id/pausebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="pauseChronometer"
                    android:text="Pause" />

                <Chronometer
                    android:id="@+id/chronometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

    </TableRow>
</LinearLayout>
